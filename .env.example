# QueryGenie Configuration
# Copy this file to .env and fill in your settings

# Cohere API Configuration
COHERE_API_KEY=your_cohere_api_key_here
COHERE_MODEL=command-r-plus

# Database Configuration (SQLite by default; change to PostgreSQL, MySQL, etc.)
DATABASE_URL=sqlite:///querydb.sqlite
# For PostgreSQL: postgresql://user:password@localhost:5432/querydb
# For MySQL: mysql+pymysql://user:password@localhost:3306/querydb

# Connection Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# Query Execution Limits
MAX_QUERY_LENGTH=10000
MAX_ROWS=10000
QUERY_TIMEOUT=30

# Streamlit UI
STREAMLIT_THEME=dark

# Logging
LOG_LEVEL=INFO
AUDIT_LOG_FILE=audit.log

# Application
DEBUG=false
